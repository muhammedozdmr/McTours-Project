@model BusTripDto

<h1>Sefer Güncelleme</h1>
<div class="row">
    <div class="col-12 col-sm-10 col-md-6 col-lg-4">
        @if (TempData.ContainsKey("SuccessMessage"))
        {
            @MessageHelper.DisplaySuccess(TempData.GetSuccessMessage());
        }
        @if (TempData["ErrorMessage"] != null)
        {
            @MessageHelper.DisplayError(TempData.GetErrorMessage());
        }
        <form asp-action="Update" asp-controller="BusTrips" method="post">
            <div class="mb-3">
                <label asp-for="VehicleId" class="form-label">Araç</label>
                <select asp-for="VehicleId" asp-items="ViewBag.VehicleSelectedList" class="form-select">
                    <option value="">.::Lütfen Seçiniz::.</option>
                </select>
            </div>
            <div class="mb-3">
                <label asp-for="DepartureCityId" class="form-label">Kalkış Şehri</label>
                <select asp-for="DepartureCityId" asp-items="ViewBag.DepartureCitySelectedList" class="form-select">
                    <option value="">.::Lütfen Seçiniz.::</option>
                </select>
            </div>
            <div class="mb-3">
                <label asp-for="ArrivalCityId" class="form-label">Varış Şehri</label>
                <select asp-for="ArrivalCityId" asp-items="ViewBag.ArrivalCitySelectedList" class="form-select">
                    <option value="">.::Lütfen Seçiniz.::</option>
                </select>
            </div>
            <div class="mb-3">
                <label asp-for="Date" class="form-label">Tarih</label>
                <input asp-for="Date" type="" class="form-control"></input>
            </div>
            <div class="mb-3">
                <label asp-for="EstimatedDuration" class="form-label">Tahmini Süre</label>
                <input asp-for="EstimatedDuration" type="text" class="form-control"></input>
            </div>
            <div class="mb-3">
                <label asp-for="TicketPrice" class="form-label">Bilet Fiyatı</label>
                <input asp-for="TicketPrice" type="text" class="form-control"></input>
            </div>
            <div class="mb-3">
                <div class="float-end">
                    <button class="btn btn-success" type="submit">
                        Güncelle
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>
@section Scripts{
        <script>
            document.getElementById('Date').flatpickr({
                enableTime: true,
                dateFormat: "Y-m-d H:i",
                time_24hr: true
            });
        </script>
}


