@model PassengerDto
<h4>Yolcu Ekleme</h4>
<div class="row">
    <div class="col-12">
        <form id="create_passenger_form">
            <div class="mb-3">
                @*asp-for ile yazılan kısımlar id yerine de geçer*@
                <label asp-for="IdentityNumber" class="form-label">Kimlik No</label>
                <input asp-for="IdentityNumber" type="text" class="form-control" />
            </div>
            <div class="mb-3">
                <label asp-for="FirstName" class="form-label">Adı</label>
                <input asp-for="FirstName" type="text" class="form-control" />
            </div>
            <div class="mb-3">
                <label asp-for="LastName" class="form-label">Soyadı</label>
                <input asp-for="LastName" type="text" class="form-control" />
            </div>
            <div class="mb-3">
                <div>
                    <label for="gender" class="form-label">Cinsiyet</label>
                </div>
                @foreach (ValueNameObject obj in ViewBag.Genders)
                {
                    <input type="radio" id="gender_type_@obj.Value" name="gender" value="@obj.Value" />
                    <label for="gender_type_@obj.Value">@obj.Name</label>
                }
            </div>
            <div class="mb-3">
                <label asp-for="DateOfBirth" class="form-label">Doğum Tarihi</label>
                <input asp-for="DateOfBirth" type="date" class="form-control"/>
            </div>
            <div class="mb-3 text-end ">
                <button id="btn-create-passenger" type="button" class="btn btn-outline-success">
                    Yeni Müşteri Ekle
                </button>
            </div>
        </form>
    </div>
</div>
