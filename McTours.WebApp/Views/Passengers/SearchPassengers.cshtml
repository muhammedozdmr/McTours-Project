@model SearchPassengerModel
@*tetikleyeceği için modeli göndermesek de olur fakat modeli burada gönderiyoruz ki asp-for kullanıyoruz ve doldurabilmek için bir sonraki ekranı yani
    post ederken bu model işime yarıyacak
*@
<h4>Yolcu Bilgileri</h4>

<div class="row">
    <div class="col-12 col-sm-6 col-md-4 col-lg-3">
        <form id="search_passengers_form">
            <div class="mb-3">
                @*asp-for ile yazılan kısımlar id yerine de geçer*@
                <label asp-for="IdentityNumber" class="form-label">Kimlik No</label>
                <input asp-for="IdentityNumber" type="text" class="form-control" />
            </div>
            <div class="mb-3">
                <label asp-for="FirstName" class="form-label">Adı</label>
                <input asp-for="FirstName" type="text" class="form-control" />
            </div>
            <div class="mb-3">
                <label asp-for="LastName" class="form-label">Soyadı</label>
                <input asp-for="LastName" type="text" class="form-control" />
            </div>
            <div class="mb-3 text-end ">
                <button id="btn-search" type="button" class="btn btn-outline-success">
                    Ara
                </button>
            </div>
        </form>
    </div>
    <div class="col-12 col-sm-6 col-md-8 col-lg-9">
        <table class="table table-bordered table-sm">
            <thead>
                <tr>
                    <th>Kimlik No</th>
                    <th>Adı</th>
                    <th>Soyadı</th>
                    <th class="d-none d-lg-table-cell">Cinsiyet</th>
                </tr>
            </thead>
            <tbody id="search_passengers_table">

            </tbody>
        </table>
    </div>
</div>
@*burada da ajax yapılabliirdi*@
