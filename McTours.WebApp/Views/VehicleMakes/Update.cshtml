@model VehicleMakeDto?
<h1>Araç Markası Güncelleme</h1>
<div action="row">
    <div class="col-12 col-sm-10 col-md-8 col-lg-6">
        @if (ViewData.ContainsKey("ErrorMessage"))
        {
            <div class="alert alert-danger">
                @ViewData["ErrorMessage"]
            </div>
        }
        @*TODO: Hocanın kodlara bak*@
        <form asp-controller="VehicleMakes" asp-action="Update" method="post">
            <div class="mb-3">
                <label for="name" class="form-label">Marka Adı:</label>
                <input type="text" id="name" name="name" class="form-control" value="@Model.Name" />
            </div>
            <div class="mb-3">
                <div class="float-end">
                    <a class="btn btn-outline-warning" asp-action="Index">İptal</a>
                    <button class="btn btn-outline-success">
                        Güncelle
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>