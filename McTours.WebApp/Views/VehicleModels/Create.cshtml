@model VehicleModelDto
<h1>Araç Model Ekleme</h1>
<div action="row">
    <div class="col-12 col-sm-10 col-md-8 col-lg-6">
        @if (TempData.ContainsKey("SuccessMessage"))
        {
            <div class="alert alert-success">
                @TempData["SuccessMessage"]
            </div>
        }
        @if (TempData.ContainsKey("ErrorMessage"))
        {
            @MessageHelper.DisplayError((string)TempData["ErrorMessage"]);
        }
        <form asp-controller="VehicleModels" asp-action="Create" method="post">
            <div class="mb-3">
                <label for="name" class="form-label">Marka Adı:</label>
                <select id="vehicle_make_id" name="vehicleMakeId" class="form-select">
                    <option value="">.:: Lütfen Seçiniz ::..</option>
                    @foreach (VehicleMakeDto vehicleMake in ViewBag.VehicleMakes)
                    {
                        if (Model?.VehicleMakeId == vehicleMake.Id)
                        {
                            <option value="@vehicleMake.Id" selected>@vehicleMake.Name</option>
                        }
                        else
                        {
                            <option value="@vehicleMake.Id">@vehicleMake.Name</option>
                        }
                    }
                </select>
            </div>
            <div class="mb-3">
                <label for="name" class="form-label">Model Adı:</label>
                <input type="text" id="name" name="name" class="form-control" value="@Model?.Name" />
            </div>
            <div class="mb-3">
                <div class="float-end">
                    <a class="btn btn-outline-warning" asp-action="Index">İptal</a>
                    <button class="btn btn-outline-success">
                        Kaydet
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>